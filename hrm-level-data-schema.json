{
  "title": "Human Resource Machine Level Data Schema",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "number": {
        "type": "number"
      },
      "name": {
        "type": "string"
      },
      "cutscene": {
        "type": "boolean"
      },
      "instructions": {
        "type": "string"
      },
      "commands": {
        "type": "array",
        "items": {
          "enum": [ "INBOX", "OUTBOX", "COPYFROM", "COPYTO", "ADD", "SUB", "BUMPUP", "BUMPDN", "JUMP", "JUMPZ", "JUMPN" ]
        }
      },
      "dereferencing": {
        "type": "boolean"
      },
      "comments": {
        "type": "boolean"
      },
      "labels": {
        "type": "boolean"
      },
      "floor": {
        "type": "object",
        "properties": {
          "columns": {
            "type": "number"
          },
          "rows": {
            "type": "number"
          },
          "tiles": {
            "anyOf": [
              {
                "type": "object",
                "patternProperties": {
                  "^\\d$": {
                    "anyOf": [
                      {
                        "type": "number",
                        "pattern": "^-?\\d+$"
                      },
                      {
                        "type": "string",
                        "pattern": "^[A-Z]$"
                      },
                      {
                        "type": "null"
                      }
                    ]
                  }
                }
              },
              {
                "type": "array",
                "items": {
                  "anyOf": [
                    {
                      "type": "number",
                      "pattern": "^-?\\d+$"
                    },
                    {
                      "type": "string",
                      "pattern": "^[A-Z]$"
                    },
                    {
                      "type": "null"
                    }
                  ]
                }
              }
            ]
          }
        },
        "required": [ "columns", "rows" ]
      },
      "expect": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "inbox": {
              "type": "array"
            },
            "outbox": {
              "type": "array"
            }
          },
          "required": [ "inbox", "outbox" ]
        }
      },
      "challenge": {
        "type": "object",
        "properties": {
          "size": {
            "type": "number"
          },
          "speed": {
            "type": "number"
          }
        },
        "required": [ "size", "speed" ]
      }
    },
    "oneOf": [
      {
        "required": [ "number", "name", "instructions", "commands", "expect", "challenge" ]
      },
      {
        "required": [ "number", "name", "cutscene" ]
      }
    ]
  }
}
